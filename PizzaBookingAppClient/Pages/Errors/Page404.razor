@page "/not-found"

<MudText Typo="Typo.h1" Align="Align.Center" Class="mt-4">
	404
</MudText>

<MudText Typo="Typo.h3" Color="Color.Error" Align="Align.Center">
	There's nothing here.
</MudText>

<div class="d-flex justify-center">
	<MudLink Href="/">Back to home page</MudLink>
</div>

<div>
	<MudText Typo="Typo.h3" Color="Color.Primary"> May be you like &#x2665; .</MudText>
	<ProductBoard products="products"/>
</div>

@code {
	private List<Product> products = null!;

	protected override async Task OnParametersSetAsync()
	{
		await base.OnParametersSetAsync();
		products = await _httpService.Get<List<Product>>($"/Product/GetAll");
	}
}