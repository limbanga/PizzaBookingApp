@page "/admin/category"
@inject ICategoryService _categoryService
<PageTitle>Category</PageTitle>

<div class="row">

    <div class="d-flex justify-content-between align-items-end">
	    <h3>Category</h3>
        <!-- Button trigger modal -->
        <a class="btn btn-success btn-sm" href="admin/category/add">
            <i class="fa-solid fa-plus"></i>
            New category
        </a>
    </div>

	<div class="w-100"> 
        @if (categories == null)
        {
            <div class="text-center">
                <Loader />
            </div>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Count</th>
                        <th scope="col">Update At</th>
                        <th scope="col">Create At</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in categories)
                    {
                        <CategoryRow Category="@category" 
                            UpdateButtonHandler="SetCategoryToUpdateOrDelete"
                            DeleteButtonHandler="SetCategoryToUpdateOrDelete" />
                    }
                </tbody>
            </table>
        }
	</div>
</div>

<!--
///////////////////////////////////////////////////////
    THE PLACE TO SET THE MODAL
///////////////////////////////////////////////////////
-->
<!-- Add Modal -->
<AddCategoryModal Category="categoryViewModel"
                  SaveButtonHandler="LoadCategories"/>

<!-- Update Modal -->
<UpdateCategoryModal Category="categoryViewModel"
                     SaveButtonHandler="LoadCategories" />
<!-- Delete Modal -->
<ConfirmDeleteModal 
    ModalTitle="Are you sure to delete this item"
    BodyText="@($"Do you want to delete {@categoryViewModel.Name}?")" 
    IdToDelete="@categoryViewModel.Id"
    ConfirmButtonHandler="DeleteCategory" />


@code {
    private List<CategoryViewModel>? categories;
    private CategoryViewModel categoryViewModel = new CategoryViewModel();

    protected override async Task OnInitializedAsync()
    {
        await LoadCategories();
    }

    private async Task LoadCategories()
    {
        categories = await GetCategories();
        Console.WriteLine("LoadCategories success!");
    }

    private async Task<List<CategoryViewModel>?> GetCategories()
    {
        try
        {
            return await _categoryService.GetAllAsync();
        }
        catch (ConnectException)
        {
            Console.WriteLine("Fetch data failed");
            return new List<CategoryViewModel>();
        }
        catch (Exception)
        {
            throw;
        }
    }

    private async Task DeleteCategory(int IdToDelete)
    {
        try
        {
            Console.WriteLine("DeleteCategory is called " + IdToDelete);
            await _categoryService.DeleteAsync(IdToDelete);
            await LoadCategories();
        }
        catch (Exception)
        {
            
            throw;
        }

    }

    private void SetCategoryToAdd()
    {
        categoryViewModel = new CategoryViewModel();
    }

    private void SetCategoryToUpdateOrDelete(CategoryViewModel category)
    {
        categoryViewModel = category;
    }
}
