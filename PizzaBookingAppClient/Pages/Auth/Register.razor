@layout MainLayout

@page "/register"

<MudGrid Class="d-flex align-center justify-center">
    <MudItem xs="12" sm="9" md="6">
        <MudPaper Class="d-flex align-center justify-center mud-width-full mt-8 pa-4"
                  Style="@($"background: var(--mud-palette-secondary);")">

            <MudGrid>

                <MudItem sm="3" Class="d-none d-sm-flex">
                    <MudImage
                        Src="https://th.bing.com/th/id/R.bf930ebb5ed02711a9163989748b13a7?rik=tIgDAeh7ARU4aQ&pid=ImgRaw&r=0"
                        Style="width: 100%; height: 100%;"
                        ObjectFit="ObjectFit.Cover"
                        ObjectPosition="ObjectPosition.Left"/>
                </MudItem>


                <MudItem xs="12" sm="9" Class="d-flex align-center justify-center flex-wrap pa-8">

                    <MudText Typo="Typo.h4"
                             Color="Color.Primary">Register now!</MudText>

                    <MudTextField @bind-Value="TextValue"
                                  Class="mt-8"
                                  FullWidth=true
                                  Label="Enter your phone number"
                                  Variant="Variant.Text" />

                    <MudTextField @bind-Value="TextValue"
                                  Class="mt-8"
                                  FullWidth=true
                                  Label="Enter your email"
                                  Variant="Variant.Text" />

                    <MudTextField @bind-Value="TextValue"
                                  Class="mt-8"
                                  FullWidth=true
                                  HelperText="8 characters"
                                  AdornmentColor="Color.Success"
                                  InputType="InputType.Password"
                                  Label="Enter your password"
                                  Variant="Variant.Text" />

                    <MudButton Class="mt-8"
                               Variant="Variant.Filled"
                               FullWidth=true
                               Color="Color.Error">Register!</MudButton>

                </MudItem>

            </MudGrid>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {

    public string TextValue { get; set; }

}

